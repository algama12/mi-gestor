{% extends 'base.html.twig' %}

{% block title %}Tarea{% endblock %}

{% block body %}
    <h1>Tarea</h1>

    <table class="table">
        <tbody>            
            <tr>
                <th>Descripcion</th>
                <td>{{ tarea.Descripcion }}</td>
            </tr>
            <tr>
                <th>Horas</th>
                <td>{{ tarea.Horas }}</td>
            </tr>
            <tr>
                <th>Prioridad</th>
