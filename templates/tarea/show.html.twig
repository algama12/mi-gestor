            </tr>
            <tr>
                <th>Completado</th>
                <td>{{ tarea.Completado ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

            <a class="btn btn-secondary mt-3" href="{{ path('app_tarea_index') }}">Volver al listado</a>

    {{ include('tarea/_delete_form.html.twig') }}
