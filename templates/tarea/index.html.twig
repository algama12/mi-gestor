    <h2>INFORMES</h2>
    <div>
  <canvas id="myChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const ctx = document.getElementById('myChart');
  const alta = {{ alta|default(0) }};
  const media = {{ media|default(0) }};
  const baja = {{ baja|default(0) }};

  new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Alta', 'Media', 'Baja'],
      datasets: [{
        label: '# de Prioridad',
        data: [alta, media, baja],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
</script>

